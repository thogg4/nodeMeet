<!DOCTYPE html>
<html>
  <head>
    <title>nodeMeet</title>
    <link rel="stylesheet" href="stylesheets/bootstrap.css" type="text/css" media="screen" title="no title" charset="utf-8">
    <link rel="stylesheet" href="stylesheets/style.css" type="text/css" media="screen" title="no title" charset="utf-8">
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <ul class="nav">
            <li><a href="/">Home</a></li>
            <% if (request.session.auth) { %>
              <li><a href="/logout">Logout</a></li>
              <li><a href="/account">Account</a></li>
            <% } else { %>
              <li><a href="/login">Login</a></li>
              <li><a href="/signup">Signup</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>    
    
    <div class="container">
      <%- body %>
    </div>
    
    <% if (typeof(flash) != "undefined") { %>
      <% if (flash.success) { %>
        <div class="alert alert-success">
          <%- flash.success %>
        </div>
      <% } %>
      <% if (flash.error) { %>
        <div class="alert alert-error">
          <%- flash.error %>
        </div>
      <% } %>
    <% } %>
    
    <script type="text/javascript" src="javascripts/jquery.js"></script>
    <script type="text/javascript" src="javascripts/script.js"></script>
  </body>
</html>